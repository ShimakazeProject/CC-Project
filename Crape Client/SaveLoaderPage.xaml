<Page x:Class="Crape_Client.SaveLoaderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Crape_Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SaveLoaderPage">

    <Grid>
        <DataGrid x:Name="_list" Grid.Row="1" MouseDoubleClick="_list_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="存档标题" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="存档时间" Binding="{Binding Date}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</Page>
